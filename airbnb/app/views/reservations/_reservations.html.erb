<div class="col-xs-12 space-wrapper">
    <div class="space-border">
        <div class="space">
            <div class="image-wrapper col-xs-6 col-md-6 no-padding pull-left">
                <img src="holder.js/100px200?theme=my-theme&text=Yet to upload..." />
            </div>
            <div class="col-xs-6 col-md-6 no-padding pull-left">
                <div class="space-description pull-left">
                    <div class="room-type">
                        <%= Airbnb::ROOM_TYPES[reservation.space.room_type] %>
                    </div>
                    <div>
                        @<%= reservation.space.city.name.camelize %>
                    </div>
                    <div>
                        <%= reservation.space.beds_count %> beds available.</div>
                    <div>Costs
                        <%= reservation.space.cost_per_day %>&#x20b9; per day.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>